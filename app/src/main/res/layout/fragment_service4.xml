<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Service4Fragment">

    <TextView
        android:id="@+id/Service4Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/service4_title"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="320dp"
        android:layout_height="231dp"
        android:layout_marginTop="13dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/white_round_box"
        app:layout_constraintTop_toBottomOf="@id/Service4Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/profImage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/user" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/profNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="NiackName"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/profEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Email Address"
            android:textColor="@color/black"
            android:textSize="13sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="86dp"
            android:layout_height="40dp"
            android:layout_marginTop="29dp"
            android:text="@string/edit_prof"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:background="@drawable/gray_stroke_button"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="208dp"
        android:layout_marginTop="13dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/white_round_box"
        app:layout_constraintTop_toBottomOf="@id/linear1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAnn"
            android:layout_width="320dp"
            android:layout_height="52dp"
            android:background="@color/white"
            android:text="@string/announcement"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="left|center"
            style="?android:attr/borderlessButtonStyle"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAppConfig"
            android:layout_width="320dp"
            android:layout_height="52dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:text="@string/app_config"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="left|center"
            style="?android:attr/borderlessButtonStyle"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAppPolicy"
            android:layout_width="320dp"
            android:layout_height="52dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:text="@string/app_policy"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="left|center"
            style="?android:attr/borderlessButtonStyle"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>